<h2>These are our products:</h2>
<div class="prodContainer">
    {{#if products}}
    {{#each products}}
        <div class="card">
            <div>
                <img src={{{this.image}}} style="max-width: 100px;">
            </div>
            <div>
                {{this.name}}
            </div>
            <div>
                {{this.price}}
            </div>
        </div>
    {{/each}}
    {{else}}
        <h4>No products available.</h4>
    {{/if}}
</div>